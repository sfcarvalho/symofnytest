{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chamados</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chamado.id }}</td>
            </tr>
            <tr>
                <th>Titulo</th>
                <td>{{ chamado.titulo }}</td>
            </tr>
            <tr>
                <th>Obs</th>
                <td>{{ chamado.obs }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chamados_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('chamados_edit', { 'id': chamado.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
